# ============================================================
# MicroAI Governance Framework - Environment Configuration
# ============================================================
# Copy this file to .env and fill in your values
# NEVER commit your .env file to version control!

# ============ API Configuration ============
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ============ EPI Configuration ============
EPI_THRESHOLD=0.7
PHI_WEIGHT=1.0

# ============ Treasury Configuration ============
TREASURY_BALANCE=5000000

# ============ Logging Configuration ============
LOG_DIR=./logs
LOG_LEVEL=INFO

# ============ Ethereum Configuration ============
# Sepolia Testnet
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
# or use Alchemy
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Mainnet (for production)
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# Deployer private key (KEEP SECRET!)
# Use environment variable or secrets manager in production
PRIVATE_KEY=your_private_key_here_never_commit

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key

# ============ Solana Configuration ============
SOLANA_RPC_URL=https://api.devnet.solana.com
# For mainnet:
# SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Solana wallet path
SOLANA_WALLET_PATH=~/.config/solana/id.json

# ============ IPFS Configuration ============
IPFS_ENABLED=false
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# ============ Database Configuration (Optional) ============
# For production, you may want to use a database
# DATABASE_URL=postgresql://user:password@localhost:5432/microai_governance
# REDIS_URL=redis://localhost:6379/0

# ============ Security Configuration ============
# JWT Secret for API authentication (generate a secure random string)
# JWT_SECRET=your_secure_random_string_here
# JWT_ALGORITHM=HS256
# JWT_EXPIRY_HOURS=24

# ============ Feature Flags ============
ENABLE_AI_AGENTS=true
ENABLE_THOUGHT_LOGGING=true
ENABLE_BLOCKCHAIN_INTEGRATION=false

# ============ Rate Limiting ============
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ============ Monitoring (Optional) ============
# SENTRY_DSN=https://your_sentry_dsn
# PROMETHEUS_ENABLED=true
# PROMETHEUS_PORT=9090
